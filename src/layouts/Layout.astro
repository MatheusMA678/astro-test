---
import "@fontsource/roboto";
import "@fontsource/bai-jamjuree";

import SignIn from "../components/SignIn.astro";
import Hero from "../components/Hero.astro";
import Copyright from "../components/Copyright.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="NLW Spacetime - Registre seus melhores momentos durante sua carreira de desenvolvedor!"
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Spacetime - {title}</title>
	</head>
	<body class="grid h-screen grid-cols-2 bg-gray-900 text-gray-100">
		<section
			class="relative flex flex-col items-start justify-between overflow-hidden border-r border-white/10 bg-stars bg-cover px-28 py-16"
		>
			<!-- Blur -->
			<div
				class="absolute right-0 top-1/2 h-[288px] w-[526px] -translate-y-1/2 translate-x-1/2 rounded-full bg-purple-700 opacity-50 blur-full"
			>
			</div>

			<!-- Stripes -->
			<div class="absolute bottom-0 right-2 top-0 w-2 bg-stripes"></div>

			<!-- Left Content -->
			<SignIn />
			<Hero />
			<Copyright />
		</section>
		<section class="flex flex-col bg-stars bg-cover p-16 overflow-y-auto">
			<slot />
		</section>
	</body>
</html>
